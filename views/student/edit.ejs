

<div class="container my-3 student-data mx-auto">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <a class="btn btn-sm btn-primary" href="/student">Back</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-header">
                    <h2>Update <%= student.name %> data</h2>
                </div>
                <div class="card-body">
                    
                    <form action="/student/update/<%= student.id %>" method="post" enctype="multipart/form-data">
                        <div class="my-3">
                            <label for="">Name</label>
                            <input name="name" value="<%= student.name %>" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Email</label>
                            <input name="email" value="<%= student.email %>" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Cell</label>
                            <input name="cell" value="<%= student.cell %>" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Location</label>
                            <select name="location" id="" class="form-control">
                                <option value="">-select-</option>
                                <option <% if (student.location == 'Jatrabari') { %> selected <% } %> value="Jatrabari">Jatrabari</option>
                                <option <% if (student.location == 'Banani') { %> selected <% } %> value="Banani">Banani</option>
                                <option <% if (student.location == 'Gulshan') { %> selected <% } %> value="Gulshan">Gulshan</option>
                            </select>
                        </div>
                        <div class="my-3">
                            <label for="">Photo</label>
                            <br>
                            <img class="preload-student" src="/images/students/<%= student.photo %>" alt="">
                            <br>
                            <label for="upload_student_photo">
                                <img src="https://static.thenounproject.com/png/145683-200.png" alt=""></label>
                            <input name="student-photo" type="file" id="upload_student_photo" >
                        </div>
                        <div class="my-3">
                            <input type="submit" class="btn btn-primary w-100" value="Update">
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>